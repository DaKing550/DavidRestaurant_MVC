@model DavidRestaurant.Models.RecipeItems.RecipeItemDetail

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>RecipeItemDetail</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AmountOfIngredient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AmountOfIngredient)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IngredientId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IngredientId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MenuItemId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MenuItemId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredient.IngredientName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ingredient.IngredientName)
        </dd>
        <dt class = "col-sm-2">
            Price of ingredients
        </dt>
        <dd class = "col-sm-10">
            @(Model.AmountOfIngredient * Model.Ingredient.PriceOfIngredient)
        </dd>
        <dt class = "col-sm-2">
            Name of Menu Item
        </dt>
        <dd class = "col-sm-10">
            @(Model.MenuItem.Name )
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.Id  }) |
    <a asp-action="Index">Back to List</a>
</div>
